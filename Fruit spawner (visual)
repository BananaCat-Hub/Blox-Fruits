-- Blox Fruits Devil Fruit Picker GUI
-- Paste this in a LocalScript inside StarterGui or a ScreenGui

local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local Mouse = Player:GetMouse()

-- Create the main GUI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "DevilFruitPicker"
ScreenGui.Parent = Player.PlayerGui

local MainFrame = Instance.new("Frame")
MainFrame.Name = "MainFrame"
MainFrame.Size = UDim2.new(0, 300, 0, 400)
MainFrame.Position = UDim2.new(0.5, -150, 0.5, -200)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

local Title = Instance.new("TextLabel")
Title.Name = "Title"
Title.Text = "Devil Fruit Picker"
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.Parent = MainFrame

local CloseButton = Instance.new("TextButton")
CloseButton.Name = "CloseButton"
CloseButton.Text = "X"
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -30, 0, 0)
CloseButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 18
CloseButton.Parent = MainFrame

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

local SearchBox = Instance.new("TextBox")
SearchBox.Name = "SearchBox"
SearchBox.PlaceholderText = "Search fruits..."
SearchBox.Size = UDim2.new(1, -20, 0, 30)
SearchBox.Position = UDim2.new(0, 10, 0, 35)
SearchBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
SearchBox.TextColor3 = Color3.fromRGB(255, 255, 255)
SearchBox.Font = Enum.Font.Gotham
SearchBox.TextSize = 14
SearchBox.Parent = MainFrame

local ScrollFrame = Instance.new("ScrollingFrame")
ScrollFrame.Name = "ScrollFrame"
ScrollFrame.Size = UDim2.new(1, -10, 1, -75)
ScrollFrame.Position = UDim2.new(0, 5, 0, 70)
ScrollFrame.BackgroundTransparency = 1
ScrollFrame.ScrollBarThickness = 5
ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
ScrollFrame.Parent = MainFrame

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 5)
UIListLayout.Parent = ScrollFrame

-- List of all Blox Fruits devil fruits (including variants like Dragon West/East)
local devilFruits = {
    "Bomb", "Spike", "Chop", "Spring", "Rocket", "Spin", "Bird: Falcon", "Smoke", "Flame", 
    "Ice", "Sand", "Dark", "Diamond", "Light", "Rubber", "Barrier", "Ghost", "Magma", 
    "Quake", "Buddha", "Love", "Spider", "Sound", "Phoenix", "Portal", "Rumble", "Pain", 
    "Blizzard", "Gravity", "Mammoth", "Dough", "Shadow", "Venom", "Control", "Spirit",
    "Dragon West", "Dragon East", "Leopard", "Kitsune"
}

-- Create buttons for each fruit
local function createFruitButtons()
    -- Clear existing buttons
    for _, child in ipairs(ScrollFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end
    
    -- Filter fruits based on search
    local searchText = string.lower(SearchBox.Text)
    local filteredFruits = {}
    
    for _, fruit in ipairs(devilFruits) do
        if string.find(string.lower(fruit), searchText, 1, true) then
            table.insert(filteredFruits, fruit)
        end
    end
    
    -- Create buttons for filtered fruits
    for _, fruit in ipairs(filteredFruits) do
        local FruitButton = Instance.new("TextButton")
        FruitButton.Name = fruit
        FruitButton.Text = fruit
        FruitButton.Size = UDim2.new(1, -10, 0, 30)
        FruitButton.Position = UDim2.new(0, 5, 0, 0)
        FruitButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
        FruitButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        FruitButton.Font = Enum.Font.Gotham
        FruitButton.TextSize = 14
        FruitButton.Parent = ScrollFrame
        
        FruitButton.MouseButton1Click:Connect(function()
            -- Simulate picking the fruit
            game:GetService("ReplicatedStorage").Remotes.Store:InvokeServer("PurchaseRawFruit", fruit)
            
            -- Notification
            local Notification = Instance.new("TextLabel")
            Notification.Name = "Notification"
            Notification.Text = "Picked: "..fruit
            Notification.Size = UDim2.new(0, 200, 0, 40)
            Notification.Position = UDim2.new(0.5, -100, 1, 10)
            Notification.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
            Notification.TextColor3 = Color3.fromRGB(255, 255, 255)
            Notification.Font = Enum.Font.GothamBold
            Notification.TextSize = 14
            Notification.Parent = MainFrame
            
            wait(2)
            Notification:Destroy()
        end)
    end
    
    -- Update canvas size
    ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, #filteredFruits * 35)
end

-- Initial creation of buttons
createFruitButtons()

-- Update buttons when search text changes
SearchBox:GetPropertyChangedSignal("Text"):Connect(function()
    createFruitButtons()
end)
